<Window x:Class="ConsoleERP_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleERP_Client"
        mc:Ignorable="d"
        Title="Console ERP Client" Height="350" Width="525" WindowState="Maximized" Closing="Window_Closing">
    <Grid>

        <TabControl x:Name="tabControl" Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="nav_back" HorizontalAlignment="Left" VerticalAlignment="Top" Content="&lt;" Width="20"/>
            <Button x:Name="nav_refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Content="R" Width="20" Click="nav_refresh_Click"/>
            <Button x:Name="nav_for" HorizontalAlignment="Left" VerticalAlignment="Top" Content="&gt;" Width="20"/>
        </StackPanel>
        <!--add tab-->
        <Button x:Name="addTabButton" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Width="80" Content="Add Tab" Margin="0" Click="add_tab_Click"/>
        <!--close tab-->
        <Button x:Name="closeButton" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Width="80" Content="Close Tab" Margin="0,0,80,0" Click="close_tab_Click"/>
    </Grid>
</Window>
